@model CareerCloud.MVC.ViewModels.CreateJobVM

@{
    ViewData["Title"] = "Create";
  
}

<h1>Create Job</h1>
<h4>Company: @ViewBag.CompanyName</h4>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="Company" class="control-label"></label>
            <text asp-for="Company" class ="form-control" asp-items="ViewBag.Company"></select>*@

        
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="JobDescription" class="control-label"></label>
                <input asp-for="JobDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProfileCreated" class="control-label"></label>
                <input asp-for="ProfileCreated" class="form-control" />
                <span asp-validation-for="ProfileCreated" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInactive" /> @Html.DisplayNameFor(model => model.IsInactive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompanyHidden" /> @Html.DisplayNameFor(model => model.IsCompanyHidden)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Job Education" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
